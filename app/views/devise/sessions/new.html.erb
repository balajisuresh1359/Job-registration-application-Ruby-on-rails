<div class="card">
  <div class="card-header">
  <h1>Log in</h1>
  </div>
  <div class="card-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" , placeholder:"type your email ..."%>
  </div>
<br>
  <div class="field">
    
    <%= f.password_field :password, autocomplete: "current-password" , class:"form-control" ,placeholder:"type your password.."%>
  </div>
<br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me ,class:"form-check-input" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br>
  <div class="actions">
    <%= f.submit "Log in" ,class:"btn btn-secondary" %>
  </div>
  <br>
<% end %>


  </div>
</div>



<%= render "devise/shared/links" %>
